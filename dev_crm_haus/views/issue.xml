<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- list view dari issue -->
    <record id="view_issue_tree" model="ir.ui.view">
        <field name="name">bcrm.issue.tree</field>
        <field name="model">crm.issue</field>
        <field name="arch" type="xml">
            <tree>
                <field name="issue_problem" string="Permasalahan" />
                <field name="issue_category" string="Kategori" />
                <field name="issue_comment" string="Komentar" />
            </tree>
        </field>
    </record>

    <!-- action untuk issue -->
    <record id="action_issue_register" model="ir.actions.act_window">
        <field name="name">Buat Permasalahan Baru</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">crm.issue</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Buat Permasalahan Baru
            </p>
        </field>
    </record>

    <!-- form view dari issue -->
    <record id="view_issue_form" model="ir.ui.view">
        <field name="name">crm.issue.form</field>
        <field name="model">crm.issue</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="employee_id" string="Karyawan"></field>
                        <field name="issue_departement" string="Departemen"></field>
                        <field name="issue_problem" string="Permasalahan" />
                        <field name="issue_category" string="Kategori" />
                        <field name="issue_comment" string="Komentar" />
                    </group>
                    <group>
                        <field name="issue_attachment" string="Lampiran" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- search filter untuk issue -->
    <record id="view_issue_search" model="ir.ui.view">
        <field name="name">crm.issue.search</field>
        <field name="model">crm.issue</field>
        <field name="arch" type="xml">
            <search>
                <field name="issue_problem" string="Permasalahan" />
                <filter name="group_by_category" string="Kategori"
                    context="{'group_by': 'issue_category'}" />
                <searchpanel>
                    <field name="issue_category" String="Kategori" icon="fa-users" select="multi"
                        enable_countesr="1" />
                </searchpanel>
            </search>
        </field>
    </record>


</odoo>