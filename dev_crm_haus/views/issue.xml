<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="action_issue_register" model="ir.actions.act_window">
        <field name="name">Create New Issue</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">crm.issue</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create new issue
            </p>
        </field>
    </record>

    <record id="view_issue_form" model="ir.ui.view">
        <field name="name">crm.issue.form</field>
        <field name="model">crm.issue</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="issue_problem" string="Problem"/>
                        <field name="issue_category" string="Category"/>
                        <field name="issue_comment" string="Comment"/>
                        <field name="issue_attachment"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>



</odoo>

